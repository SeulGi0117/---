<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">




    <View
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/keypadLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"/>
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="377dp"
        android:layout_height="78dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:gravity="right"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNum"
        tools:ignore="RtlHardcoded" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="377dp"
        android:layout_height="78dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:gravity="right"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded" />

    <TableLayout
        android:id="@+id/keypadLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="1dp"
        android:shrinkColumns="*"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvResult"
        app:layout_constraintVertical_weight="1.5">

        <TableRow
            android:layout_weight="1" >

            <Button
                android:id="@+id/button7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/button8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/button9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/buttonDiv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="#FF9800" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/button5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/button6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/buttonMul"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="x"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="#FF9800" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/button2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/button3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/buttonMinus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="#FF9800" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/buttonAc"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="AC"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:backgroundTint="@color/material_dynamic_neutral60" />

            <Button
                android:id="@+id/button0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/material_dynamic_neutral30" />

            <Button
                android:id="@+id/buttonResult"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="="
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="#FF9800" />

            <Button
                android:id="@+id/buttonPlus"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="7dp"
                android:onClick="buttonClicked"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                app:backgroundTint="#FF9800"/>
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>