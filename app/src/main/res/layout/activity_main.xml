<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/Btn7"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp"
        android:text="7"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/Btn4"
        app:layout_constraintEnd_toStartOf="@+id/Btn8"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Btn4"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:text="4"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/Btn1"
        app:layout_constraintEnd_toStartOf="@+id/Btn5"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Btn1"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:text="1"
        android:textAllCaps="false"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/BtnAc"
        app:layout_constraintEnd_toStartOf="@+id/Btn2"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BtnAc"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="59dp"
        android:text="ac"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:backgroundTint="@color/material_dynamic_neutral80"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BtnZero"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Btn8"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp"
        android:text="8"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/Btn5"
        app:layout_constraintEnd_toStartOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/Btn7" />

    <Button
        android:id="@+id/Btn5"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:text="5"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/Btn2"
        app:layout_constraintEnd_toStartOf="@+id/Btn6"
        app:layout_constraintStart_toEndOf="@+id/Btn4" />

    <Button
        android:id="@+id/Btn2"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:text="2"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/BtnZero"
        app:layout_constraintEnd_toStartOf="@+id/Btn3"
        app:layout_constraintStart_toEndOf="@+id/Btn1" />

    <Button
        android:id="@+id/BtnZero"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="59dp"
        android:text="0"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BtnResult"
        app:layout_constraintStart_toEndOf="@+id/BtnAc" />

    <Button
        android:id="@+id/Btn6"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:text="6"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/Btn3"
        app:layout_constraintEnd_toStartOf="@+id/BtnMul"
        app:layout_constraintStart_toEndOf="@+id/Btn5" />

    <Button
        android:id="@+id/Btn3"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="17dp"
        android:text="3"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/BtnResult"
        app:layout_constraintEnd_toStartOf="@+id/BtnMin"
        app:layout_constraintStart_toEndOf="@+id/Btn2" />

    <Button
        android:id="@+id/BtnResult"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="59dp"
        android:text="="
        android:textSize="24sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/BtnPlu"
        app:layout_constraintStart_toEndOf="@+id/BtnZero" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp"
        android:text="9"
        android:textSize="24sp"
        app:backgroundTint="@color/material_dynamic_neutral_variant50"
        app:layout_constraintBottom_toTopOf="@+id/Btn6"
        app:layout_constraintEnd_toStartOf="@+id/BtnDiv"
        app:layout_constraintStart_toEndOf="@+id/Btn8" />

    <Button
        android:id="@+id/BtnDiv"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="13dp"
        android:text="รท"
        android:textSize="30sp"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/BtnMul"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn3" />

    <Button
        android:id="@+id/BtnMul"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="17dp"
        android:text="X"
        android:textSize="24sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/BtnMin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Btn6" />

    <Button
        android:id="@+id/BtnMin"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="17dp"
        android:text="-"
        android:textSize="34sp"
        android:textStyle="bold"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toTopOf="@+id/BtnPlu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Btn3" />

    <Button
        android:id="@+id/BtnPlu"
        android:layout_width="77dp"
        android:layout_height="64dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginBottom="59dp"
        android:text="+"
        android:textSize="30sp"
        app:backgroundTint="#FF9800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/BtnResult" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="377dp"
        android:layout_height="78dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:gravity="right"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNum" />

    <TextView
        android:id="@+id/tvNum"
        android:layout_width="377dp"
        android:layout_height="78dp"
        android:layout_marginStart="17dp"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="155dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:gravity="right"
        android:text="0"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>